<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/item_image_dathang"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/icon_giohang"
            />
        <TextView
            android:id="@+id/item_txt_gia_dathang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/item_txt_kho_dathang"
            tools:ignore="TouchTargetSizeCheck"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/item_image_dathang"
            android:text="Giá"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/item_txt_kho_dathang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/item_image_dathang"
            android:layout_centerHorizontal="true"
            android:layout_toRightOf="@+id/item_image_dathang"
            android:text="Kho"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/item_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:src="@drawable/icon_x" />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bảng gợi ý size >"
        android:textSize="18dp"
        android:layout_gravity="end"
        android:layout_marginEnd="10dp"
        android:id="@+id/banggoiysize"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textSize="15dp"
            android:layout_margin="10dp"
            android:id="@+id/item_txtsize"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recycle_size_detail"
            android:layout_below="@+id/item_txtsize"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        style="@style/Widget.AppCompat.AutoCompleteTextView"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Số lượng:"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_cong1"
            android:id="@+id/item_btncong_dathang"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="20dp"
            android:layout_toLeftOf="@id/item_btncong_dathang"
            android:gravity="center"
            android:id="@+id/item_btnGiatri"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icon_tru"
            android:id="@+id/item_btntru_donhang"
            android:layout_toLeftOf="@+id/item_btnGiatri"/>
    </RelativeLayout>
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thêm vào giỏ hàng"
        android:id="@+id/item_btnDathang"
        android:background="#C67C4E"
        android:textColor="@color/colorWhite"
        android:layout_marginTop="25dp"/>

</LinearLayout>