<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:background="@drawable/gradient_bg"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_home1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:background="@color/colorDDDDDD"
                android:padding="20dp"
                android:src="@drawable/ic_shimmer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:background="@color/colorDDDDDD"
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="Hello, "
                android:textColor="@color/colorDDDDDD"
                android:textSize="18dp"
                app:layout_constraintStart_toEndOf="@+id/avatar_home1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textviewNameUser1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                android:text="Huy"
                android:background="@color/colorDDDDDD"
                android:textColor="@color/colorDDDDDD"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/textView1"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textview_showsproduct1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="3dp"
                android:text="Xem sản phẩm "
                android:drawableRight="@drawable/ic_arrow_down"
                android:textColor="@color/colorDDDDDD"
                android:background="@color/colorDDDDDD"
                android:textSize="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/avatar_home1"
                app:layout_constraintTop_toBottomOf="@+id/textView1" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:backgroundTint="#D9D9D9"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/search_home1"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView21"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:backgroundTint="#D9D9D9"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toStartOf="@+id/cardView1"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:background="@color/colorDDDDDD"
                    />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView31"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#D9D9D9"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView1">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="5dp"
                android:backgroundTint="#D9D9D9"
                app:cardCornerRadius="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView31">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:id="@+id/filter_home1"/>
            </androidx.cardview.widget.CardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/constraintLayout20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="150dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/colorDDDDDD"
                android:id="@+id/viewpager_home1"
                android:layout_width="350dp"
                android:layout_height="160dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/circleIndicator_home1"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="130dp"
                app:ci_drawable="@drawable/circle_inditor"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thể Loại"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorDDDDDD"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/colorDDDDDD"
                    android:textStyle="bold"
                    android:background="@color/colorDDDDDD"
                    android:layout_marginTop="5dp"
                    tools:text="Giày thể thao nam cao  "
                    android:textSize="14sp"
                    android:maxLines="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
                    android:paddingLeft="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorDDDDDD"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/colorDDDDDD"
                    android:textStyle="bold"
                    android:background="@color/colorDDDDDD"
                    android:layout_marginTop="5dp"
                    tools:text="Giày thể thao nam cao  "
                    android:textSize="14sp"
                    android:maxLines="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
                    android:paddingLeft="3dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp">
                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/colorDDDDDD"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/colorDDDDDD"
                    android:textStyle="bold"
                    android:background="@color/colorDDDDDD"
                    android:layout_marginTop="5dp"
                    tools:text="Giày thể thao nam cao  "
                    android:textSize="14sp"
                    android:maxLines="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
                    android:paddingLeft="3dp"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Sản phẩm nổi bật"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recycle_category_home" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginHorizontal="20dp"
                >
                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="162dp"
                    android:background="@color/colorDDDDDD"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="154dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/colorDDDDDD"
                    android:textStyle="bold"
                    android:background="@color/colorDDDDDD"
                    android:layout_marginTop="5dp"
                    tools:text="Giày thể thao nam cao  "
                    android:textSize="14sp"
                    android:maxLines="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
                    android:paddingLeft="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/colorDDDDDD"
                            android:textStyle="bold"
                            android:background="@color/colorDDDDDD"
                            tools:text="Giày thể thao nam cao  "
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
                            android:paddingLeft="3dp"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/colorDDDDDD"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorDDDDDD"
                            tools:text="Giày thể thao nam cao  "
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
                            android:paddingLeft="3dp"/>
                    </LinearLayout>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_shimmer"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/colorDDDDDD"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <ImageView
                    android:layout_width="154dp"
                    android:layout_height="162dp"
                    android:background="@color/colorDDDDDD"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:scaleType="centerCrop"/>
                <TextView
                    android:layout_width="154dp"
                    android:layout_height="20dp"
                    android:fontFamily="@font/inter_regular"
                    android:textColor="@color/colorDDDDDD"
                    android:textStyle="bold"
                    android:background="@color/colorDDDDDD"
                    android:layout_marginTop="5dp"
                    tools:text="Giày thể thao nam cao  "
                    android:textSize="14sp"
                    android:maxLines="2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
                    android:paddingLeft="3dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="20dp"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/colorDDDDDD"
                            android:textStyle="bold"
                            android:background="@color/colorDDDDDD"
                            tools:text="Giày thể thao nam cao  "
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
                            android:paddingLeft="3dp"/>
                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:fontFamily="@font/inter_regular"
                            android:textColor="@color/colorDDDDDD"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:background="@color/colorDDDDDD"
                            tools:text="Giày thể thao nam cao  "
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
                            android:paddingLeft="3dp"/>
                    </LinearLayout>


                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_shimmer"
                        android:layout_marginTop="18dp"
                        android:layout_marginLeft="20dp"
                        android:background="@color/colorDDDDDD"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>