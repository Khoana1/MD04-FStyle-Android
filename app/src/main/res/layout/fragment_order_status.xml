<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    tools:context=".src.view.user.profile.OrderStatusFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/icBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/inter_semi_bold"
            android:text="Đơn hàng của bạn"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/icFilter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_filter" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rlt_filter_order"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/img_filter_order"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/ic_success" />

        <TextView
            android:id="@+id/tv_filter_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lọc đơn hàng theo trạng thái"
            android:layout_toRightOf="@id/img_filter_order"
            android:layout_centerVertical="true"
            android:fontFamily="@font/inter_medium"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="15dp"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/tv_cancel_filter_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bỏ lọc"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/colorRed"
            android:textSize="15sp" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvOrderStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_order_status"
            />
        <LinearLayout
            android:id="@+id/view_empty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_title"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/no_order_found" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/inter_medium"
                android:text="Không tìm thấy đơn hàng của bạn"
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />

        </LinearLayout>
    </FrameLayout>



</LinearLayout>