<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipe_refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWhite"
        tools:context=".src.view.admin.BillAdminFragment">

        <LinearLayout
            android:id="@+id/data_category"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_semi_bold"
                    android:padding="20dp"
                    android:text="Quản lý hóa đơn"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/ivFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:src="@drawable/ic_filter" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_filter_order"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <ImageView
                    android:id="@+id/img_filter_order"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    android:src="@drawable/ic_success" />

                <TextView
                    android:id="@+id/tv_filter_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lọc đơn hàng theo trạng thái"
                    android:layout_toRightOf="@id/img_filter_order"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/inter_medium"
                    android:textColor="@color/colorBlack"
                    android:layout_marginStart="15dp"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_cancel_filter_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bỏ lọc"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="20dp"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/colorRed"
                    android:textSize="15sp" />

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginHorizontal="10dp"
                >
                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="8"
                    >
                    <LinearLayout
                        android:id="@+id/ll_search_order"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/search_border"
                        android:layout_marginVertical="10dp"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/search_icon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ic_search_order" />

                        <EditText
                            android:id="@+id/search_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="15sp"
                            android:layout_gravity="center_vertical"
                            android:hint="Nhập mã đơn hàng của bạn"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:maxLines="1" />

                        <ImageView
                            android:id="@+id/img_delete_search"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="7dp"
                            android:src="@drawable/ic_delete_search" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_search_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:background="@drawable/search_border"
                        android:layout_marginVertical="10dp"
                        android:visibility="gone"
                        android:padding="10dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:src="@drawable/ic_search_order" />

                        <EditText
                            android:id="@+id/search_date_edit_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginHorizontal="10dp"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/inter_bold"
                            android:textSize="15sp"
                            android:enabled="false"
                            android:hint="Ngày đặt hàng"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:inputType="text"
                            android:maxLines="1" />

                        <ImageView
                            android:id="@+id/img_delete_search_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_delete_search" />

                        <ImageView
                            android:id="@+id/img_date_picker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_date_picker" />

                    </LinearLayout>
                </FrameLayout>


                <ImageView
                    android:id="@+id/icSwitch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_switch"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvOrderAdmin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_order_admin"
                    />

                <LinearLayout
                    android:id="@+id/view_empty"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_title"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="300dp"
                        android:src="@drawable/view_order_empty" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/inter_medium"
                        android:text="Không tìm thấy đơn hàng của bạn"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp" />

                </LinearLayout>
            </FrameLayout>


        </LinearLayout>


    </RelativeLayout>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
