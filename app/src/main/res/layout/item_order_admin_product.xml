<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="5dp"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/ll_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img_payment"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/giay1"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:paddingVertical="10dp"
                >
                <TextView
                    android:id="@+id/name_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semi_bold"
                    android:textColor="@color/colorBlack"
                    android:text="Giày thể tha...."
                    android:textSize="20sp"
                    />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/linear_layout_payment1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        android:text="Size: "
                        android:textSize="18sp"
                        />
                    <TextView
                        android:id="@+id/size_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="5dp"
                        tools:text="40"
                        android:textSize="18sp"
                        />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <TextView
                        android:id="@+id/price_payment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="500.000 VND"
                        android:textSize="18sp"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@color/colorBlack"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toStartOf="@+id/quantum_payment"
                        android:fontFamily="@font/inter_medium"
                        android:text="X"
                        android:textSize="18sp" />
                        <TextView
                            android:id="@+id/quantum_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="5dp"
                            android:layout_alignParentEnd="true"
                            tools:text="1"
                            android:fontFamily="@font/inter_medium"
                            android:textSize="18sp"
                            />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_below="@id/ll_item"
            android:background="@color/colorDDDDDD" />

    </RelativeLayout>
</LinearLayout>