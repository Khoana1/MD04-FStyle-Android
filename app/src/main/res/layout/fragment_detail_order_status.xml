<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".src.view.user.profile.DetailOrderStatusFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorSplash"
            >
            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_arrow_back_white"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/inter_semi_bold"
                android:text="Chi tiết đơn hàng"
                android:textColor="@color/colorWhite"
                android:textSize="18sp" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:text="Mã đơn hàng: " />
                    <TextView
                        android:id="@+id/tv_order_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_bold"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        tools:text="661743b07cfe50aef04fd1ce" />
                </LinearLayout>



                <TextView
                    android:id="@+id/tv_order_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_order_active"
                    android:fontFamily="@font/inter_medium"
                    android:paddingHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:paddingVertical="5dp"
                    android:textColor="#00CC00"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    tools:text="Đơn hàng: Hoàn tất" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Ngày đặt hàng: "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_order_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        tools:text="2021-07-11 15:00:00" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:text="Tổng tiền: "
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_detail_order_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="3dp"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        tools:text="66.500 đ" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/colorDDDDDD" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lịch sử đơn hàng"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@color/colorDDDDDD" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/tv_order_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/tv_order_history_pending"
                    android:textSize="14sp"
                    android:textIsSelectable="true"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/inter_regular"
                    />
                <Button
                    android:id="@+id/btn_order_history_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg_border_empty_cart"
                    android:fontFamily="@font/inter_medium"
                    android:text="Xem chi tiết"
                    android:textColor="@color/colorSplash"
                    android:textStyle="bold" />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/colorDDDDDD" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin người nhận"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@color/colorDDDDDD" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_order_consignee_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Nguyễn Văn A"
                    android:textSize="16sp"
                    android:textColor="@color/color30336"
                    android:fontFamily="@font/inter_semi_bold"
                    />
                <TextView
                    android:id="@+id/tv_order_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="0987654321"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/inter_regular"
                    />
                <TextView
                    android:id="@+id/tv_order_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Tòa nhà FPT Polytechnic, đường Trịnh Văn Bô, Phương Canh, Nam Từ Liêm, Hà Nội"
                    android:textSize="14sp"
                    android:textColor="@color/colorBlack"
                    android:fontFamily="@font/inter_regular"
                    />
            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/colorDDDDDD" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương thức vận chuyển"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@color/colorDDDDDD" />

            <TextView
                android:id="@+id/tv_order_shipping_method"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="Giao hàng nhanh"
                android:layout_marginStart="5dp"
                android:textColor="@color/colorBlack"
                />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/colorDDDDDD" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phương thức thanh toán"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/colorBlack"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorWhite"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@color/colorDDDDDD" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="5dp"
                >
                <TextView
                    android:id="@+id/tv_order_payment_method"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_gravity="center_vertical"
                    android:text="Thanh toán khi nhận hàng"
                    android:textColor="@color/colorBlack"
                    />
                <ImageView
                    android:id="@+id/img_select_payment"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_payment_money"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    />
            </LinearLayout>



            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:background="@color/colorDDDDDD" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginVertical="10dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sản phẩm"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/colorBlack"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:fontFamily="@font/inter_semi_bold"
                android:text="("
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_order_quantum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:text=")"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>



        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_order_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="5dp"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/item_order_admin_product"
            />

        <TextView
            android:id="@+id/btn_cancel_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginVertical="5dp"
            android:background="@drawable/bg_order_deactive"
            android:fontFamily="@font/inter_medium"
            android:text="Hủy đơn hàng"
            android:gravity="center"
            android:padding="15dp"
            android:textColor="@color/colorBlack"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="30dp"
            android:background="@color/colorWhite"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@color/colorDDDDDD" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:text="Tiền sản phẩm: " />

                    <TextView
                        android:id="@+id/tv_order_product_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="47.500 đ"
                        android:fontFamily="@font/inter_medium"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:text="Phí vận chuyển " />

                    <TextView
                        android:id="@+id/tv_order_ship_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="19.000 đ"
                        android:fontFamily="@font/inter_medium"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:text="Tổng tiền: " />

                    <TextView
                        android:id="@+id/tv_order_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="66.500 đ"
                        android:fontFamily="@font/inter_medium"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>




    </LinearLayout>
</ScrollView>
