<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".src.view.user.payment.PaymentFragment">

    <LinearLayout
        android:id="@+id/img_back"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/baseline_arrow_back_ios_24" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Thanh toán "
            android:textColor="@color/colorBlack"
            android:textSize="27dp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"

        android:layout_marginLeft="40dp"
        android:layout_marginTop="10dp"
        android:text="Địa chỉ nhận hàng"
        android:textColor="@color/colorBlack"
        android:textSize="23dp"
        android:textStyle="bold" />
    <!--    <ListView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_marginTop="10dp"-->
    <!--        android:layout_height="100dp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="173dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:text="NGUYỄN VĂN TIẾN "
            android:textColor="@color/colorBlack"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="40dp"
            android:text="0123456789"
            android:textColor="@color/colorBlack"
            android:textSize="17dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="40dp"
            android:text="Tòa nhà FPT POLYTTECHIC , Phố
           Trịnh văn bô , Nam Từ Liêm ,Hà nội "
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_editAdress"
            android:layout_width="190dp"
            android:layout_height="48dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/baseline_edit_24"
            android:text="Sửa địa chỉ"
            android:textAllCaps="false"
            android:textColor="@color/colorBlack"
            android:textSize="18dp"
            app:backgroundTint="@null" />

    </LinearLayout>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:text="Nhanh"
                android:textColor="@color/colorBlack"
                android:textSize="25dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="240dp"
                android:layout_height="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:text="Giao hàng trong 3 ngày "
                android:textColor="@color/colorBlack"
                android:textSize="20dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:text="15.000 VND"
            android:textColor="#FF0000"
            android:textSize="25dp"
            android:textStyle="bold" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="10dp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtSLSPTT"
            android:layout_width="185dp"
            android:layout_height="30dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:text="Tổng số sản phẩm: 3"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/txtTTTT"
            android:layout_width="220dp"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:text="Tổng giá : 1.515.000 VND"
            android:textColor="@color/colorBlack"
            android:textSize="18dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"

        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/bg_button"
            android:text="TT" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/bg_textview"
            android:gravity="center"
            android:text="1.515.000 VND"
            android:textColor="@color/colorBlack"
            android:textSize="20dp" />
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_datHang"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/bg_button"
        android:text="Đặt hàng"
        android:textColor="@color/colorWhite"
        android:textSize="20dp" />
</LinearLayout>