<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="5dp"

    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/item_image_product_home"
        android:layout_width="154dp"
        android:layout_height="162dp"
        android:src="@drawable/giay1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_margin="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_corner10"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@+id/item_image_product_home"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/item_icon_heart"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_heart" />
    </LinearLayout>


    <TextView
        android:id="@+id/item_name_product_home"
        android:maxWidth="154dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Giày thể thao nam cao cấp màu đen "
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_image_product_home"
        android:paddingLeft="3dp"/>
    <TextView
        android:id="@+id/item_price_product_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="500.000 VNĐ"
        android:textSize="14dp"
        android:textColor="#FF00"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_name_product_home"
        android:paddingLeft="3dp"/>

    <LinearLayout
        android:id="@+id/item_btnCong_product_home"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/bg_iconcong_corner7dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_name_product_home"
        android:layout_marginRight="5dp">

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/icon_cong"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>